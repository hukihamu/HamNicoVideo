{
  "manifest_version": 3,
  "name": "HamNicoVideo",
  "description": "",
  "version": "0.7.0",
  "options_page": "html/options.html",
  "icons": {
    "32": "img/icon_32.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "alarms",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.nicovideo.jp/*"
  ],
  "action": {
    "default_popup": "html/popup_main.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content_script.js"],
    "css": ["css/content_css.css"],
    "run_at": "document_start"
  }],
  "web_accessible_resources":[{
    "resources": [
      "css/*.css",
      "html/*.html"
    ],
    "matches": ["<all_urls>"]
  }]
}